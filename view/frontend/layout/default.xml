        <referenceContainer name="page.top">
            <block class="Pepperjam\Network\Block\LinkProcessor" name="pepperjam.link_processor" template="Pepperjam_Network::html/link_processor.phtml"/>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Pepperjam\Network\Block\Tag" name="pepperjam.tag" template="Pepperjam_Network::html/tag.phtml" after="-"/>
        </referenceContainer>
    </body>
</page>
